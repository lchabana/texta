<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<widget id="com.chat.texta" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Texta</name>
  <description>
        A simple chat app.
    </description>
  <author email="lchabana@gmail.com" href="https://github.com/lchabana">
        Liteboho Chabana
    </author>
  <content src="index.html"/>
  <access origin="*"/>
  <allow-intent href="http://*/*"/>
  <allow-intent href="https://*/*"/>
  <allow-intent href="tel:*"/>
  <allow-intent href="sms:*"/>
  <allow-intent href="mailto:*"/>
  <allow-intent href="geo:*"/>
  <platform name="android">
    <allow-intent href="market:*"/>
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*"/>
    <allow-intent href="itms-apps:*"/>
  </platform>
  <hook src="node_modules\cordova-import-npm\scripts\importNpmPackages.js" type="before_prepare"/>
</widget>